{
	"exclude": [
		"./__tests__",
		"./coverage",
		"./dist",
		"./logs",
		"./node_modules",
		".dockerignore",
		".gitignore",
		".gitlab-ci.yml",
		".gitpod.yml",
		"/CONTRIBUTING.md",
		"/Dockerfile",
		"/jenkinsfile",
		"jest.config.ts",
		"/LICENSE",
		"/README.md"
	],
	"ts-node": {
		"transpileOnly": true,
		"files": true
	},
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"rootDir": "./src",
		// "baseUrl": "./",
		"outDir": "dist",
		"moduleResolution": "node",
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"removeComments": true,
		"skipLibCheck": true
	}
}